{
  "compilerOptions": {
   
    "target": "ESNEXT",                                  
    "module": "commonjs",  
    "outDir": "dist",    
    "rootDir": "./", 
    "moduleResolution": "node",                         
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js"
  ]
}
